<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>
	
	<appSettings>
		<add key="useLocalDatabase" value="false" />
	</appSettings>

	<log4net>
		<appender name="Log" type="log4net.Appender.FileAppender">
			<file type="log4net.Util.PatternString" value="%env{APPDATA}\\Gablarski\\gablarski.log" />
			<appendToFile value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%-4timestamp [%thread] %-5level %logger - %message%newline" />
			</layout>
		</appender>

		<root>
			<level value="FATAL" />
			<appender-ref ref="Log" />
		</root>

		<logger name="Gablarski WinForms">
			<level value="INFO" />
		</logger>
		
		<logger name="OpenAL">
			<level value="WARN" />
		</logger>
	</log4net>
</configuration>